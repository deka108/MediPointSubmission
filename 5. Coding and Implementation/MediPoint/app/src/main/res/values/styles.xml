<resources>

    <!-- Base application theme. -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- MyActionBar style -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_bg</item>
    </style>

    <!--dropdown menu style-->
    <style name="MySpinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/positive_button</item>
        <item name="android:textColor">@color/button_font_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Textview Layout -->
    <style name="TextviewLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/frame</item>
    </style>

    <!-- Datepicker Style -->
    <style name="DatepickerLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <!-- LinearLayout Style -->
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">?android:attr/actionBarSize</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- TabLinearLayout Style -->
    <style name="TabLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Textfield style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/frame</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/textfield</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Fragment Style -->
    <style name="FragmentStyle">
        <item name="android:background">@drawable/fragment_frame</item>
        <item name="android:textColor">@color/frame</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- spinner item style -->
    <style name="spinnerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/frame</item>
    </style>

    <!-- spinner item dropdown style -->
    <style name="spinnerDropDownItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/frame</item>
    </style>

    <!--spinner button style-->
    <style name="buttonSpinnerStyle"
        parent="@android:style/Widget.Spinner.DropDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33sp</item>
        <item name="android:background">@drawable/buttonspinner</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>
